@model CreateExamViewModel

<header class="mt-3">
    @if (Model.ExamHeader == null)
    {
        <form asp-action="SaveHeader" method="post">
            <div class="row">
                <input placeholder="Title" asp-for="ExamHeader.ExamTitle" id="newExamTitleInput" />
                <button type="submit"><img class="float-right ml-2 p-1" src="~/images/save-icon.png" width="30" /></button>
            </div>
            <div class="row">
                <input placeholder="Description" asp-for="ExamHeader.ExamDescription" id="newExamDescriptionInput" />
            </div>
            <div class="row">
                <input class="col-3" placeholder="Subject Title" asp-for="ExamHeader.SubjectTitle" />
                <input class="offset-1 col-8" placeholder="Subject Description" asp-for="ExamHeader.SubjectDescription" />
            </div>
        </form>
    }
    else
    {
        <div class="row">
            <label asp-for="ExamHeader.ExamTitle" id="newExamTitleLbl"></label>
        </div>
        <div class="row">
            <label asp-for="ExamHeader.ExamDescription" id="newExamDescriptionLbl"></label>
        </div>
        <div class="row">
            <label class="col-3" asp-for="ExamHeader.SubjectTitle"></label>
            <label class="offset-1 col-8" asp-for="ExamHeader.SubjectDescription"></label>
        </div>
    }
</header>
<hr class="my-4">


<main class="row mt-2">
    <!--Exam View-->
    <div class="col-md-9 p-2">

        <hr class="my-2 col-11">
        <!--Input Box - 3 Options/Buttons - Add Text/Image/Quistion-->
        <section id="questionInput" class="row d-flex justify-content-around">
            <a id="addExamText" class="col-md-4">
                <img class="add-icons mx-auto d-block" src="~/images/teacher/add-text-icon.png" />
                <label class="addIconLbl col-12 text-center">Add Text</label>
            </a>
            <a id="addExamQuestion" class="col-md-4">
                <img class="add-icons mx-auto d-block" src="~/images/teacher/add-question-icon.png" />
                <label class="addIconLbl col-12 text-center">Add Question</label>
            </a>
            <a id="addExamImage" class="col-md-4">
                <img class="add-icons mx-auto d-block" src="~/images/teacher/add-image-icon.png" />
                <label class="addIconLbl col-12 text-center">Add Image</label>
            </a>
        </section>
        <hr class="my-2 col-11">

    </div>



    <!--Exam Settings-->
    <section id="examSettingsSection" class="col-md-3 p-2">
        <div class="d-flex justify-content-between">
            <h5>Exam Settings</h5>
            <img id="examSettingsIcon" src="~/images/settings-icon.png" />
        </div>
        <div class="mt-4">
            <label asp-for="Settings.IsExamPrivate"></label>
            <input asp-for="Settings.IsExamPrivate" />
        </div>
        <hr class="my-4">
        <div>
            <label asp-for="Settings.ExamDueDate"></label>
            <input type="date" asp-for="Settings.ExamDueDate" />
            <span asp-validation-for="Settings.ExamDueDate"></span>
        </div>
        <hr class="my-4">
        <div>
            <label asp-for="Settings.ExamTimeLimit"></label>
            <input type="time" asp-for="Settings.ExamTimeLimit" />
            <span asp-validation-for="Settings.ExamTimeLimit"></span>
        </div>
        <hr class="my-4">
    </section>


</main>


<link href="~/css/TeacherStyle.css" rel="stylesheet" />