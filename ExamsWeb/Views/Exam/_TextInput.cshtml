@model ExamTextViewModel
<!--Text Settings Edit-->
<form id="@(Model.IdName)InputForm" method="post" class="inputForm">
    @if (Model.IdName == "question")
    {
        <h2 class="text-center my-3">Question</h2>
    }


    <partial name="_TextEdittingView" for="@Model" />


    @if (Model.IdName == "text")
    {
        <input id="@(Model.IdName)InputBtn" class="btn-primary" onclick="SaveTextInput('@(Model.IdName)')" />
    }
    @if (Model.IdName == "question")
    {
        <hr class="mt-3 mb-4">

        <h3 class="text-center mb-3">Answers</h3>

        <div class="px-4 mt-1">
            @{
                var answer = new ExamTextViewModel()
                {
                    IdName = "answer"
                };
            }
            <partial name="_TextEdittingView" for="@answer" />

            <!--Add Answer Button-->
        </div>
        <div class="text-center mx-2">
            <button id="addAnswerBtn" onclick="return AddAnswer()" class="mt-2">Add Answer</button>
        </div>

        <!--Save Question Button-->
        <div class="text-right">
            <button id="SaveQuestionBtn" onclick="return SaveQuestion('@(Model.IdName)')" class="mt-2 btn btn-primary">Save Question</button>
        </div>
    }
</form>
