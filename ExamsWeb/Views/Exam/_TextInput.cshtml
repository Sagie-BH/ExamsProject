@model ExamTextDto
<!--Text Settings Edit-->
<form method="post">
<div class="row mt-2">
    <!--Font Size-->
    <div class="col-3">
        <label class="mr-1" asp-for="@Model.FontSize">Font Size: </label>
        <input id="textFontSizeInput" asp-for="@Model.FontSize" value="16" max="132" min="2" onchange="setFontSize(this.value)" />
    </div>

    <!--CheckBoxes Icons-->

    <div class="col-3 d-flex justify-content-around">
        <!--Bold CheckBox-->
        <div class="image-checkbox d-flex justify-content-around">
            <input type="checkbox" asp-for="@Model.Bold" onchange="textBold(this)" hidden>
            <label class="mb-0" asp-for="@Model.Bold">
                <img src="~/images/bold.png" alt="#" class="img-fluid checkBoxIcon" />
            </label>
        </div>
        <!--Italic CheckBox-->
        <div class="image-checkbox d-flex justify-content-around">
            <input type="checkbox" asp-for="@Model.Italic" onchange="textItalic(this)" style="display:none">
            <label class="mb-0" asp-for="@Model.Italic">
                <img src="~/images/italic.png" alt="#" class="img-fluid checkBoxIcon" />
            </label>
        </div>
        <!--Underline CheckBox-->
        <div class="image-checkbox d-flex justify-content-around">
            <input type="checkbox" asp-for="@Model.Underlined" onchange="textUnderline(this)" style="display:none">
            <label class="mb-0" asp-for="@Model.Underlined">
                <img src="~/images/underlined-text.png" alt="#" class="img-fluid checkBoxIcon" />
            </label>
        </div>

    </div>
    <!--Alignment Option List-->
    <div class="col-3">
        <label class="mr-1" asp-for="@Model.Alignment">Alignment: </label>
        <select class="form-select" asp-for="@Model.Alignment" asp-items="Html.GetEnumSelectList<Alignment>()" id="orientationSelect" onchange="setAlignment(this.value)">
        </select>
    </div>
    <!--Color-->
    <div class="col-2">
        <label class="mr-1" asp-for="@Model.Color">Color: </label>
        <input type="color" asp-for="@Model.Color" onchange="setTextColor(this.value)" />
    </div>
</div>


<hr class="mt-3 mb-2">
<textarea class="ml-1 row" id="textAreaInput" placeholder="Write text here..."></textarea>
</form>
