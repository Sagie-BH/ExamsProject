@model TeacherMainViewModel


<div class="offset-1 col-10 mt-4">

    <h1>@Model.TeacherName</h1>


    <!--Icons - Create, Notification, My Tests... + 2-->
    <section id="teacher-icons" class="container-fluid col-8">
        <div class="row text-center">
            <article class="col-xs-12 col-sm-6 col-md-4">
                <a asp-action="CreateClassRoom" asp-route-teacherId="@Model.TeacherId">
                    <img src="~/images/teacher/newClass.png" class="teacher-icons" />
                    <h6>Create Class</h6>
                </a>
            </article>

            <article class="col-xs-12 col-sm-6 col-md-4">
                <a asp-controller="Exam" asp-action="CreateExam" asp-route-teacherId="@Model.TeacherId">
                    <img src="~/images/teacher/Create Test.png" class="teacher-icons" />
                    <h6>Create Exam</h6>
                </a>
            </article>
            <article class="col-sm-12  col-md-4">

                <img src="~/images/infoIcon.png" class="teacher-icons" />
                <h6>Personal Info</h6>
            </article>
        </div>
        <hr class="my-4">
    </section>

    <hr class="my-4">


    <!--3 Columns - ClassRoom, Test Archive, ?OnGoing Test?-->
    <section class="container-fluid">
        <div class="row text-center">
            <div class="col-xs-12 col-sm-6 col-md-4">

                <h3>Class Rooms</h3>
                @if (Model.MyClasses != null)
                {
                    @foreach (var classRoom in Model.MyClasses)
                    {
                        <h6>Title: @classRoom.ClassTitle</h6>
                        <h6>Subject: @classRoom.Subject</h6>
                        <h6>Students: @classRoom.StudentCount</h6>
                    }
                }
            </div>

            <div class="col-xs-12 col-sm-6 col-md-4">

                <h3>Tests Archive</h3>

            </div>
            <div class="col-sm-12  col-md-4">

                <h3>Grades</h3>

            </div>
        </div>
        <hr class="my-4">
    </section>


</div>



<link href="~/css/TeacherStyle.css" rel="stylesheet" />